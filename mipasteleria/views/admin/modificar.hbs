<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-6 offser-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="form-group-2">
                <label for="">Titulo</label>
                <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control" name="titulo">
            </div>
            <div class="form-group-2">
                <label for="">Subtitulo</label>
                <textarea name="subtitulo" class="form-control" placeholder="Subtitulo">{{novedad.subtitulo}}</textarea>
            </div>
            <div class="form-group-2">
                <p>
                    <label>Imagen: <input type="file" name="imagen" id="imagen" class="form-control"/></label>
                </p>
                <p>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </p>   
                </div>
            <div class="form-group-2">
                <label for="">Cuerpo</label>
                <textarea name="cuerpo" class="form-control" placeholder="Cuerpo">{{novedad.cuerpo}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
            </form>

            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>