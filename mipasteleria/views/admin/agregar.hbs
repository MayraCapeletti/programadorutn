<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-6 offser-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data"/>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="subtitulo" placeholder="Subtitulo"></textarea>
                </div>
                <div class="form-group-2">
                    <label>Imagen: <input type="file" name="imagen" id="imagen" class="form-control"/></label>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="cuerpo" placeholder="Cuerpo"></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>